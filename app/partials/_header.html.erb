<div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Login</h3>
  </div>
   
  <div class="modal-body">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>	
  <div class="row-fluid">	
  <label>Email Address</label>

      <%= f.email_field :email, :class => "span6", :id => "loginEmail" %>
</div>
  <div class="row-fluid">
   <label>Password</label>

     <%= f.password_field :password, :class => "span6" %>

</div>
 
  <div class="row-fluid">
  	<div class="span6">
  <small><%= link_to "Create Account", new_registration_path(resource_name), :class => "pull-left" %></small>
  <small><%= link_to "Forgot Your Password", new_password_path(resource_name), :class => "pull-right" %></small>
</div>
</div>



  </div>
  <div class="modal-footer">
  	<%= f.submit "Log In", :class => 'btn btn-primary' %>
  	<% end %>
    <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>
