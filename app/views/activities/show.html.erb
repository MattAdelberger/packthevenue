<% if account_signed_in? && @activity.account.id == current_user.id  %>
<div class="container">
	<div class="row">
		<div class="span12">
			<div class="well well-small">
				<h3>Admin Panel</h3>
			</div>
			</div>
	</div>
</div>
	<% end %>

<div id="show-event" class="container container-padding">

	<div class="row">
		<div class="span4">
			<a href="#" class="thumbnail">
      <img src="http://placehold.it/300x200" alt="">
    </a>
    <div class="well well-small">
    <h4>Event Location</h4>
    <%= @activity.address %><br />
    <%= @activity.city %>, <%= @activity.state %> <%= @activity.zip %>
    </div>
		</div>
		<div class="offset1 span7">
			<h2><%= @activity.name %></h2>
			<p><%= @activity.description %></p>
			
				<table class="table table-striped">
  <thead>
    <tr>
      <th style="width: 90%">Ticket Name</th>
      <th style="width: 10%">Quantity</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>General Admission</td>
      <td>
      	<%= form_tag make_payment_path do %>
		<%= select_tag :ticket_quantity, options_for_select(["1", "2", "3", "4"]), :class => 'span1' %>
      </td>
    </tr>
  </tbody>
</table>

  		<%= hidden_field_tag :activity_id, @activity.id %>
    	<%= submit_tag "Check Out", :class=>"btn btn-primary pull-right" %>
	<% end %>
		</div>



</div>







