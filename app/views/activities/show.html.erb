<%= render :partial => "../partials/admin_panel"%>

<div id="show-event" class="container container-padding">

	<div class="row">
		<div class="span4">
			<a href="#" class="thumbnail">
      <img src="http://placehold.it/300x200" alt="">
    </a>
    <div class="well well-small">
    <h4>Event Location</h4>
    <%= @activity.address %><br />
    <%= @activity.city %>, <%= @activity.state %> <%= @activity.zip %>
    </div>
		</div>
		<div class="offset1 span7">
			<h2><%= @activity.name %></h2>
			<p><%= @activity.description %></p>
			
				<table class="table table-striped">
  <thead>
    <tr>
      <th style="width: 90%">Ticket Name</th>
      <th style="width: 10%">Quantity</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>General Admission</td>
      <td>
      	<%= form_tag make_payment_path do %>
		<%= select_tag :ticket_quantity, options_for_select(["1", "2", "3", "4"]), :class => 'span1' %>
      </td>
    </tr>
  </tbody>
</table>

  		<%= hidden_field_tag :activity_id, @activity.id %>
    	<%= submit_tag "Check Out", :class=>"btn btn-primary pull-right" %>
	<% end %>
		</div>
		


</div>
			<div class="span12">
		<div class="row">


Ticket's Left: <%= @tickets_remaining %>
</div>
<div class="row">
Current Ticket Price: <%= number_to_currency(@current_price) %>
</div>
<div class="row">
Total Savings: <%= number_to_currency(@saving_price) %>
</div>
</div>
</div>
</div>






