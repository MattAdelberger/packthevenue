<div class="container container-padding">
	<div class="row">
		<div class="span4">
			<h4>New to Pack The Venue?</h4>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <label>First Name</label>
  <div class="row">
  <div class="span8">
      <%= f.text_field :first_name %>
    </div>
   </div>
   <label>Last Name</label>
  <div class="row">
  <div class="span8">
      <%= f.text_field :last_name %>
    </div>
   </div>
   <label>Company Name (optional)</label>
  <div class="row">
  <div class="span8">
      <%= f.text_field :company_name %>
    </div>
   </div>
   <label>Zip Code</label>
  <div class="row">
  <div class="span8">
      <%= f.text_field :zip_code %>
    </div>
   </div>
   <label>Email Address</label>
  <div class="row">
  <div class="span8">
      <%= f.text_field :email %>
    </div>
   </div>
   <label>Password</label>
  <div class="row">
  <div class="span8">
      <%= f.password_field :password %>
    </div>
   </div>
<label>Re-Enter Password</label>
  <div class="row">
  <div class="span8">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
     <label>Select One</label>
   <div class="row">
  <div class="span8">
  	<label class="radio">
  	<%= f.radio_button(:type_of_user, "merchant") %>
  	I will be using Pack The Venue to host events
  	</label>
  	<label class="radio">
  	<%= f.radio_button(:type_of_user, "buyer") %>
  	I will be using Pack The Venue to attend events
  	</label>
  	<label class="radio">
  	<%= f.radio_button(:type_of_user, "both") %>
  	I will be using Pack The Venue to host and attend events
  	</label>
    </div>
    <%= f.file_field :photo %>
   </div>
<div class="button-container">
  <div><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
<% end %>

		</div>
		</div>
		</div>
		
</div>