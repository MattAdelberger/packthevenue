<div class="container container-padding">
<% if !account_signed_in? %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <label>Name</label>
  <div class="row">
  <div class="span8">
      <%= f.text_field :name %>
    </div>
   </div>
   <label>Email Adress</label>
  <div class="row">
  <div class="span8">
      <%= f.text_field :email %>
    </div>
   </div>
   <label>Password</label>
  <div class="row">
  <div class="span8">
      <%= f.password_field :password %>
    </div>
   </div>
<label>Confirm Password</label>
  <div class="row">
  <div class="span8">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
<div class="button-container">
  <div><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
<% end %>

<% end %>
<% activity = Activity.find(session["activity_id"]) %>

<%= activity.name %>

<% session["tickets_selected"].each do |key, value| %>
	<% type = activity.ticket_types.find(:first, :conditions => ["ticketname like ?", key]) %>
	
	<p>Ticket Type: <%= key %> Amount: <%= value %> Price: <%= value.to_i * type.ticket_price %></p>
<% end %>
</div>